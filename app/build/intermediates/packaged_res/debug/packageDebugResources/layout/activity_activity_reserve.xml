<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eco_background"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/eco_card_background"
            android:padding="24dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <TextView
                android:text="ðŸŽ¯ Reserve Your Activity"
                android:textColor="@color/eco_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Confirm your eco-friendly activity booking"
                android:textColor="@color/eco_text_secondary"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Activity Details Card -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/eco_card_background"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="Activity Details"
                android:textColor="@color/eco_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvActivityTitle"
                android:text="Activity Title"
                android:textColor="@color/eco_text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvActivityDescription"
                android:text="Activity Description"
                android:textColor="@color/eco_text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:text="Price: "
                    android:textColor="@color/eco_text_primary"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvActivityPrice"
                    android:text="$0.00"
                    android:textColor="@color/eco_success"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Booking Button -->
        <Button
            android:id="@+id/btnBookActivity"
            android:text="ðŸŒ¿ Book This Activity"
            style="@style/EcoButtonPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <!-- Info Text -->
        <TextView
            android:text="ðŸ’¡ You can view and manage your bookings in the Booking History section"
            android:textColor="@color/eco_text_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>
