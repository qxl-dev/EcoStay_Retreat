<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eco_background"
    android:padding="16dp">

    <!-- Main Container -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/eco_card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTitle"
                android:text="🏨 Available Rooms"
                android:textColor="@color/eco_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Choose your perfect eco-friendly accommodation"
                android:textColor="@color/eco_text_secondary"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Filter and Sort Controls -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/eco_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="🔍 Filter &amp; Sort"
                android:textColor="@color/eco_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Filter Spinner -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="Filter:"
                    android:textColor="@color/eco_text_primary"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"/>

                <Spinner
                    android:id="@+id/spinnerFilter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

            <!-- Sort Buttons -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSortPrice"
                    android:text="💰 Price"
                    android:textColor="@android:color/white"
                    style="@style/EcoButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btnSortType"
                    android:text="🏠 Type"
                    android:textColor="@android:color/white"
                    style="@style/EcoButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btnShowAll"
                    android:text="🔄 All"
                    android:textColor="@android:color/white"
                    style="@style/EcoButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Rooms RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRooms"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:padding="8dp"/>

    </LinearLayout>

</ScrollView>
