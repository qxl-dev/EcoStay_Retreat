<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eco_green">

    <!-- Title TextView -->
    <TextView
        android:text="EcoStay Retreat Dashboard"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-medium"/>

    <!-- View Profile Button -->
    <Button
        android:id="@+id/btnProfile"
        android:text="View Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/eco_blue"
        android:textColor="@android:color/white"/>

    <!-- View Activities Button (Added new feature) -->
    <Button
        android:id="@+id/btnActivities"
        android:text="View Available Activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/eco_yellow"
        android:textColor="@android:color/white"/>

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:text="Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"/>

    <!-- Book a Room Button -->
    <Button
        android:id="@+id/btnBookRoom"
        android:text="Book a Room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/eco_orange"
        android:textColor="@android:color/white"/>

</LinearLayout>
