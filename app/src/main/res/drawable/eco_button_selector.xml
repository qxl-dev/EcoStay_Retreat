<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/eco_primary_dark"
                android:endColor="@color/eco_primary"
                android:angle="90"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="@color/eco_primary_light"
                android:endColor="@color/eco_primary"
                android:angle="90"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/eco_primary"
                android:endColor="@color/eco_primary_dark"
                android:angle="90"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
