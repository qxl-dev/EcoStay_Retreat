<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eco_background"
    android:padding="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/eco_card_background"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <TextView
            android:text="ðŸŽ¯ Available Activities"
            android:textColor="@color/eco_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Discover our eco-friendly activities"
            android:textColor="@color/eco_text_secondary"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- Activities List -->
    <ListView
        android:id="@+id/listActivities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/eco_secondary_light"
        android:dividerHeight="1dp"
        android:padding="8dp"/>

</LinearLayout>
